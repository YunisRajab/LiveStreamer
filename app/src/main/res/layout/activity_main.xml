<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp" />

    <Button
        android:id="@+id/start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/addText"
        android:layout_marginTop="148dp"
        android:text="Start" />

    <Button
        android:id="@+id/stop_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/addText"
        android:layout_alignTop="@+id/start_button"
        android:text="Stop" />

    <EditText
        android:id="@+id/addText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customSwitch"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="@string/Address"
        android:inputType="number"
        android:text="192.168.0.17" />

    <EditText
        android:id="@+id/rateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addText"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="sample rate"
        android:inputType="number"
        android:text="16000" />

    <EditText
        android:id="@+id/channelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rateText"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="channel"
        android:inputType="number"
        android:text="2" />

    <EditText
        android:id="@+id/encodingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/channelText"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="encoding"
        android:inputType="number"
        android:text="2" />

    <EditText
        android:id="@+id/buffText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/encodingText"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="buff*10"
        android:inputType="number"
        android:text="12800" />

    <EditText
        android:id="@+id/portText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buffText"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="port"
        android:inputType="number"
        android:text="50005" />

    <TextView
        android:id="@+id/editText8"
        android:layout_width="81dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/addText"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="address" />

    <TextView
        android:id="@+id/editText9"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/rateText"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="rate" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="81dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/channelText"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="channel 2,3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/encodingText"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="encoding 2,3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buffText"
        android:layout_alignParentStart="true"
        android:text="buff*10" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="81dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/portText"
        android:layout_alignParentStart="true"
        android:text="port" />

    <Switch
        android:id="@+id/customSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="157dp"
        android:text="custom" />

</RelativeLayout>